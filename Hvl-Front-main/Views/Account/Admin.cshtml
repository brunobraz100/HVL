@model AdminLoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login Cliente";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="com-md-12">
                    @Html.Raw(ViewBag.retorno)
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Bem Vindo</h3></div>
                            <div class="card-body">
                                @using(Html.BeginForm())
                                {
                                    <div class="form-floating mb-3">
                                        <input class="form-control" asp-for="nmCpf" type="text" maxlength="14" placeholder="CNPJ" />
                                        <label for="nmCpf">CNPJ</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control" asp-for="dsSenha" type="password" placeholder="Password" />
                                        <label for="dsSenha">Password</label>
                                    </div>
                                    @* <div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                    </div> *@
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button class="btn btn-primary" type="submit">Login</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>