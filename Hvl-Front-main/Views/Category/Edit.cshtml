@model CategoryModel
@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="row">
    <div class="col-md-12">
        <br />
        @Html.Raw(ViewBag.retorno)
        <div class="card mb-4">
            <div class="card-title">
                <i class="fa-solid fa-network-wired"></i>
                Cadastro de nova categoria
            </div>
            <div class="card-body">
                @using(Html.BeginForm())
                {
                    <input asp-for="IdCategoria"  hidden />
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="DsCategoria" type="text" placeholder="Categoria" />
                        <label for="DsCategoria">Categoria</label>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="@Url.Action("index", "Category")">Voltar</a>
                        <button class="btn btn-success" type="submit">Salvar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>